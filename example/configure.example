#!/usr/bin/python
from argparse import *
import os
import glob
import platform

parser = ArgumentParser()

parser.add_argument('--dim', type=int, help='dimensionality to build executables [3]',default='2')
parser.add_argument('--opt',  choices=['DEBUG', 'TRUE'],help='compiler optimization [DEBUG]',default='DEBUG')
parser.add_argument('--mpi',  choices=['TRUE', 'FALSE'],help='MPI  on or off [TRUE]',default='FALSE')
parser.add_argument('--hdf5',  choices=['TRUE', 'FALSE'],help='HDF5  on or off [FALSE]',default='TRUE')
parser.add_argument('--efence',  choices=['TRUE', 'FALSE'],help='electric fence on or off[FALSE]',default='FALSE')
parser.add_argument('--prec',  choices=['SINGLE', 'DOUBLE'],help='precision [DOUBLE]',default='DOUBLE')
parser.add_argument('--cuda', choices=['TRUE', 'FALSE'],help='CUDA on or off [FALSE]',default='FALSE')
parser.add_argument('--petsc', choices=['TRUE', 'FALSE'],help='PETSc on or off [FALSE]',default='FALSE')

args = parser.parse_args()

print args

f_pref = open('Makefile.prefix','r')
f_post = open('Makefile.postfix','r')
makefile_pref = f_pref.read()
makefile_post = f_post.read()
f_pref.close()
f_post.close()

targets=['DomainDecomposition/Euler',  'DomainDecomposition/EBApply', 'DomainDecomposition/EBHelmholtz', 'DomainDecomposition/MHD', 'DomainDecomposition/EBAdvection', 'DomainDecomposition/EBPETSc']

top = os.getcwd()
chombo_home = top + '/..'
os.chdir(chombo_home+'/mk')
f_mach_dep = open('Make.defs.local','r')
mach_dep = f_mach_dep.read()
f_mach_dep.close()
os.chdir(top)

for t in targets:
    d= t+'/exec'
    print d
    os.chdir(d)
    f = open('GNUmakefile','w')
    f.write('\nCHOMBO_HOME := ' + chombo_home)
    f.write('\nDIM := ' + str(args.dim)+"\n")
    f.write(makefile_pref);

    f.write('\nCPPFLAGS = -std=c++11')
    f.write(mach_dep);

    if args.mpi == 'TRUE':
        f.write('\nCPPFLAGS += -DCH_MPI -DMPICH_SKIP_MPICXX -ULAM_WANT_MPI2CPP -DMPI_NO_CPPBIND')

    if(args.hdf5 == 'TRUE'):
        f.write('\nCPPFLAGS += -DCH_USE_HDF5')
        f.write('\nCPPFLAGS += $(HDFINCFLAGS)')
        f.write('\nLIBS     += $(HDFLIBFLAGS) ')

    if(args.petsc == 'TRUE'):
        f.write('\n\ninclude $(PETSC_DIR)/lib/petsc/conf/variables')
        f.write('\nCPPFLAGS += -DCH_USE_PETSC')
        f.write('\nCPPFLAGS += $(PETSC_CC_INCLUDES)')
        f.write('\nLIBS     += $(PETSC_KSP_LIB)\n')

    if(args.efence == 'TRUE'):
        f.write('\nLIBS     += $(EFENCEFLAGS) \n')


    if(args.prec == 'DOUBLE'):
        f.write('\nCXXFLAGS += -DCH_USE_DOUBLE\n')

    if args.opt == 'DEBUG':
        f.write('\nCXXFLAGS+=$(CXXDBGFLAGS) \n')
    else:
        f.write('\nCXXFLAGS+=$(CXXOPTFLAGS) \n')
   

    if args.cuda == 'TRUE':
        f.write('\nCXX = nvcc \n DEP=nvcc')
        f.write('\nCXXFLAGS+=-DPROTO_CUDA=1 -x cu --expt-extended-lambda')
        if args.opt == 'DEBUG':
            f.write('\nCXXFLAGS+=-G -DTHRUST_DEBUG')

    f.write(makefile_post);
 
    os.chdir(top)
    f.close()

